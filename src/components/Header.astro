          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path></svg
      >
    </div>
  </nav>
</header>

<style>
  .navbar {
    width: 100%;
    height: 140px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 50px;
    top: 0;
  }

  .navbar_logo {
    width: 260px;
  }

  .navbar_logo h1 {
    font-size: 2rem;
    font-weight: 600;
  }

  .search_box {
    width: 214px;
    height: 42px;
    display: flex;
    align-items: center;
    border: 1px solid rgb(212, 212, 212);
    border-radius: 50px;
  }

  .search_box input {
    width: 160px;
    background: transparent;
    border: none;
    outline: none;
    margin-left: 16px;
    font-size: 0.9rem;
  }

  .search_box svg {
    width: 20px;
    height: 20px;
  }
</style>

<script>
  const searchInput = document.querySelector("#search");

  const res = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");
  const data = await res.json();

  data.results.map(async (pokemon) => {
    const pokemonData = await fetch(pokemon.url).then((res) => res.json());
    const pokemonNames = pokemonData.name;
  });
</script>
